<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout 
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:id="@+id/layout_email"
     >    
   <ListView 
       
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/listview_email"
      android:visibility="gone"
     />
   <LinearLayout
        android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:gravity="center">
	<LinearLayout
	    android:id="@+id/layout_email_loading"
	    android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:gravity="center"
       android:layout_gravity="center">
	    
   <ProgressBar
       android:id="@+id/progress_email_loading"
       style="?android:attr/progressBarStyleLarge"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
        />
   <TextView 
       android:id="@+id/text_email_loading"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dip"
       android:text="@string/email_loading_text"
       android:textSize="30dip"
       android:textStyle="bold"/>
    </LinearLayout>
    
	<TextView
	    android:id="@+id/text_email_empty"
	    android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/email_empty_folder"
       android:textSize="30dip"
       android:textStyle="bold"/>
	</LinearLayout>
</LinearLayout>
